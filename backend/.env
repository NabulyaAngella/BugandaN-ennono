# Backend Environment Variables
# Copy values from .env.example and fill in your actual credentials

# MongoDB Connection String
# Get from: MongoDB Atlas → Clusters → Connect → Connection String
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/buganda

# Server Port
# Local: 5500, Render: 10000
PORT=5500

# JWT Secret - Generate a strong random string
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_replace_with_random_string

# Environment Type
NODE_ENV=development

# Frontend URL - for CORS
# Local: http://localhost:3000
# Production: https://your-frontend-domain.netlify.app
FRONTEND_URL=http://localhost:3000
